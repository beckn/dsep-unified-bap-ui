{
  "extends": "@tsconfig/react-native/tsconfig.json",
  "compilerOptions": {
    "module": "commonjs",
    "allowJs": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "resolveJsonModule": true,
    "baseUrl": "src",
    "jsx": "react",
    "lib": ["es2015", "es5", "es6", "dom"],
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "noEmit": true,
    "strict": true,
    "target": "esnext",
    "noImplicitAny": false,
    "paths":{
      "@interfaces/*": ["./interfaces/*"],
      "@styles/*": ["./styles/*"],
      "@styles": ["./styles"],
      "@utilz/*": ["./utils/*"],
      "@i18n": ["./i18n/"],
      "@components/*": ["./components/*"],
      "@constant/*": ["./constant/*"],
      "@services": ["./services/*"]
    }
  },
  "exclude": [
    "node_modules",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js"
  ]
}
